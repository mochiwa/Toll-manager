<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>


<AnchorPane id="mainPane" maxWidth="Infinity" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml/1" >
    <VBox style="-fx-padding:0;">
        <VBox id="headerBox" alignment="CENTER">
            <ImageView  fx:id="imageView" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true"/>

            <Label id="title" alignment="CENTER" maxWidth="Infinity" text="Admin registration">
                <VBox.margin>
                    <Insets bottom="10.0" />
                </VBox.margin></Label>
        </VBox>

        <VBox alignment="TOP_CENTER" minWidth="400">
            <children>

                <fx:include fx:id="personForm" source="../person/personForm.fxml" />
                <fx:include fx:id="passwordForm" source="../userForm/passwordForm.fxml"/>
            </children>
            <padding>
                <Insets left="10.0" right="20.0"/>
            </padding>
        </VBox>
    </VBox>
</AnchorPane>
